<view class="weui-cells">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">开始日期</view>
        </view>
        <view class="weui-cell__bd">
            <picker date-type="startPicker" mode="date" value="2018-5-25" start="2018-5-24" end="2018-5-30" bindchange="bindDateChange">
                <view class="weui-input">{{startDate}}</view>
            </picker>
        </view>
    </view>
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">结束日期</view>
        </view>
        <view class="weui-cell__bd">
            <picker date-type="endPicker" mode="date" value="{{endDate}}" start="{{endPickerStart}}" end="2018-5-31" bindchange="bindDateChange">
                <view class="weui-input">{{endDate}}</view>
            </picker>
        </view>
    </view>
</view>