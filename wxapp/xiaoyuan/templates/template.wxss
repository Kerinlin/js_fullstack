.amount-list {
  display: block;
}

.weui-flex {
  flex-wrap: wrap;
}

label {
  width: 33.3333%;
  margin-top: 15px;
}

label:nth-child(1),
label:nth-child(2),
label:nth-child(3) {
  margin-top: 0;
}

.weui-check__label {
  display: flex;
  height: 4em;
  text-align: center;
  border: 1px solid #d9d9d9;
  justify-content: center;
  align-items: center;
}
.weui-check__label text {
  display: inline-block;
}
