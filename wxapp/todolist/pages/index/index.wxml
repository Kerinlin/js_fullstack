<!--index.wxml-->
<view class="container">
  <view class="titleBar">
    <div class="status">
      <!-- wxml 模板 {{数据状态}} 数据绑定
      动态的，可编译 活 
      data 是活 setData 
      只要状态一变， 界面立即改变
      -->
      <text class="{{status=='1'?'active':''}}" data-status="1" bindtap="showStatus">全部</text>
      <text class="{{status=='2'?'active':''}}" data-status="2" bindtap="showStatus">未完成</text>
      <text class="{{status=='3'?'active':''}}" data-status="3" bindtap="showStatus">已完成</text>
    </div>
    <div class="add">
      <button bindtap="addTodoShow" class="mini-btn" size="mini" type="warn">+添加</button>
    </div>
  </view>
  <scroll-view scroll-y class="list">
    <view class="item" wx:for="{{list}}" wx:key="index" >
      <div class="content">
        <icon bindtap="changeTodo" class="icon-small" data-item="{{index}}" size="23" type="{{item.status==='1'?'success':'circle'}}"></icon>
        <text class="title">{{item.title}}</text>
        <text class="time">{{item.time}}</text>
      </div>
    </view>
  </scroll-view>
  <view class="addForm {{addShow?'hide':''}}">
    <view class="addForm-div">
      <input type="text" placeholder="请输入任务" bindinput="setInput" value="{{addText}}" class="weui-input " />
      <view class="addForm-btn">
        <button  bindtap="addTodo" type="warn" size="mini" class="weui-btn mini-btn ">确定添加</button>
        <button bindtap="addTodoHide" type="default" size="mini" class="weui-btn mini-btn">取消</button>
      </view>
    </view>
  </view>

</view>